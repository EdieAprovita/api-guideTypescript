# ========================================
# VEGAN CITY GUIDE - Environment Variables
# ========================================

# Application Configuration
NODE_ENV=production
PORT=5001

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password
MONGO_DATABASE=vegan-city-guide

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_EXPIRE=30d
JWT_REFRESH_EXPIRE=7d

# Development JWT (for api-dev service)
JWT_SECRET_DEV=your-super-secret-jwt-key-for-development
JWT_REFRESH_SECRET_DEV=your-super-secret-jwt-refresh-key-for-development

# Google Maps API (if using geolocation features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Configuration (if using nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# PRODUCTION SECURITY NOTES
# ========================================
# 1. Change all default passwords
# 2. Use strong, unique secrets for JWT
# 3. Set NODE_ENV=production
# 4. Use HTTPS in production
# 5. Configure proper CORS origins
# 6. Set appropriate rate limits
# 7. Use environment-specific secrets
# ========================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vegan-guide
MONGODB_URI_TEST=mongodb://localhost:27017/vegan-guide-test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Configuration
NODE_ENV=development

# Email Configuration (if using nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# API Configuration
API_VERSION=v1
API_PREFIX=/api 