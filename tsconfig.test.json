{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "isolatedModules": true,
        "types": ["node", "@types/jest"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "src/test/**/*.ts",
        "tests/**/*.ts",
        "**/*.spec.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
