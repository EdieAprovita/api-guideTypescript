# Example environment variables for local development

# Port where the Express server listens
PORT=3000

# MongoDB connection string
DB=mongodb://localhost:27017/veganguide

# Application environment mode (development, production, test)
NODE_ENV=development

# Secret key for signing JWT tokens
JWT_SECRET=your_jwt_secret

# Allowed origin for CORS requests from the frontend
FRONTEND_URL=http://localhost:8080

# Email address used to send transactional mail
EMAIL_USER=example@example.com

# Password for the transactional email account
EMAIL_PASS=your_email_password

# API key for Google Maps services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Default password used when seeding users (override per user if desired)
SEED_USER_PASSWORD=ChangeMe123!

# Optional individual seed user passwords
ADMIN_PASSWORD=
CHEF_PASSWORD=
DOCTOR_PASSWORD=
OWNER_PASSWORD=
