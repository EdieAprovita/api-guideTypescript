# Example environment variables for local development

# Port where the Express server listens
PORT=3000

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/veganguide

# Application environment mode (development, production, test)
NODE_ENV=development

# Enable Swagger UI in production (only if set to 'true')
ENABLE_SWAGGER_UI=false

# Optional Basic Auth to protect Swagger UI when ENABLE_SWAGGER_UI=true
# Set both variables to require Basic Auth on /api-docs
SWAGGER_AUTH_USER=
SWAGGER_AUTH_PASS=

# Secret key for signing JWT tokens
JWT_SECRET=your_jwt_secret

# Secret key for JWT refresh tokens
JWT_REFRESH_SECRET=your_jwt_refresh_secret

# Allowed origin for CORS requests from the frontend
FRONTEND_URL=http://localhost:8080

# Email address used to send transactional mail
EMAIL_USER=example@example.com

# Password for the transactional email account
EMAIL_PASS=your_email_password

# API key for Google Maps services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Default password used when seeding users (override per user if desired)
SEED_USER_PASSWORD=ChangeMe123!

# Optional individual seed user passwords
ADMIN_PASSWORD=
CHEF_PASSWORD=
DOCTOR_PASSWORD=
OWNER_PASSWORD=

# =============================================================================
# PROXY AND SECURITY CONFIGURATION
# =============================================================================

# Base URL for HTTPS redirection in production (for enforceHTTPS middleware)
# Important: This should be your actual domain in production
SECURE_BASE_URL=https://localhost

# Enable IP debugging information (ONLY for troubleshooting)
# Set to 'true' temporarily if you need to debug IP detection issues
# WARNING: Only enable in development or temporarily in production for debugging
DEBUG_IP_INFO=false

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and rate limiting)
# =============================================================================

# Redis connection URL for caching and enhanced rate limiting
# Format: redis://[username:password@]host:port[/database]
REDIS_URL=redis://localhost:6379

# Redis host (alternative to REDIS_URL)
REDIS_HOST=localhost

# Redis port (alternative to REDIS_URL)
REDIS_PORT=6379

# Redis password (if authentication is enabled)
REDIS_PASSWORD=
