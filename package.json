{
	"name": "api-guidetypescript",
	"version": "1.0.0",
	"description": "Vegan City Guide API - A comprehensive TypeScript REST API",
	"main": "dist/server.js",
	"scripts": {
		"dev": "nodemon src/server.ts",
		"start": "node dist/server.js",
		"start:dev": "ts-node src/server.ts",
		"build": "tsc",
		"build:watch": "tsc --watch",
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"postbuild": "cp swagger.yaml dist/ && cp -r public dist/ 2>/dev/null || true",
		"test": "jest --watchAll --coverage",
		"test:ci": "jest --coverage --watchAll=false",
		"test:unit": "jest --testPathPattern=unit",
		"test:integration": "jest --testPathPattern=integration",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write src/**/*.ts",
		"format:check": "prettier --check src/**/*.ts",
		"type-check": "tsc --noEmit",
		"validate": "npm run type-check && npm run lint && npm run test:ci",
		"docker:build": "docker build -t api-guidetypescript .",
		"docker:run": "docker run -p 5001:5001 api-guidetypescript",
		"swagger:generate": "swagger-jsdoc -d swagger.config.js -o swagger.yaml src/routes/*.ts",
		"docs:serve": "swagger-ui-serve swagger.yaml"
	},
	"keywords": [
		"typescript",
		"express",
		"api",
		"vegan",
		"mongodb",
		"swagger",
		"rest-api"
	],
	"author": "Edgar Chavero <edieveg316@gmail.com> (https://www.linkedin.com/in/edgar-chavero/)",
	"license": "MIT",
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"dependencies": {
		"@googlemaps/google-maps-services-js": "^3.3.42",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"chai": "^5.0.3",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-async-handler": "^1.2.0",
		"express-jwt": "^8.4.1",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.5.0",
		"express-validator": "^7.0.1",
		"helmet": "^8.1.0",
		"js-yaml": "^4.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.3.0",
		"mongoose": "^8.0.2",
		"morgan": "^1.10.0",
		"nodemailer": "^6.9.13",
		"swagger-ui-express": "^5.0.1",
		"ts-jest": "^29.1.2",
		"winston": "^3.11.0",
		"xss-clean": "^0.1.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/express-mongo-sanitize": "^1.3.2",
		"@types/express-rate-limit": "^5.1.3",
		"@types/helmet": "^0.0.48",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/mongoose": "^5.11.97",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.10.2",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"colors": "^1.4.0",
		"colors.ts": "^1.0.20",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"faker": "^5.5.3",
		"jest": "^29.7.0",
		"mocha": "^10.2.0",
		"nodemon": "^3.1.0",
		"openapi-types": "^12.1.3",
		"postman-to-openapi": "^1.7.3",
		"prettier": "^3.1.0",
		"rimraf": "^5.0.5",
		"supertest": "^6.3.4",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.2"
	}
}
